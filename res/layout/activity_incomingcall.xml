<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/qwe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDAB21"
        android:gravity="center"
        android:text="Incoming Call..."
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIncomingCall"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qwe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvIncomingCall"
        android:layout_alignStart="@+id/tvIncomingCall"
        android:layout_below="@+id/tvIncomingCall"
        android:layout_marginTop="5dp"
        android:text="Is Calling To You..."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="15dp"
        android:onClick="acceptCall"
        android:text="Accept" />

    <Button
        android:id="@+id/btnReject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAccept"
        android:layout_alignBottom="@+id/btnAccept"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:onClick="rejectcall"
        android:layout_toRightOf="@+id/btnAccept"
        android:layout_toEndOf="@+id/btnAccept"
        android:text="Reject" />

</RelativeLayout>