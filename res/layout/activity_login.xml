<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <TextView
        android:id="@+id/tvkoxai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDAB21"
        android:gravity="center"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvkoxai1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvkoxai"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Username:"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <EditText
        android:id="@+id/setup_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvkoxai1"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:hint="enter username.."
        android:textSize="25sp" >

        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/tvkoxai2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvkoxai1"
        android:layout_below="@+id/setup_username"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/setup_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvkoxai2"
        android:hint="Password"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_centerHorizontal="true" />
    
    <TextView
        android:id="@+id/tvkoxai3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvkoxai1"
        android:layout_below="@+id/setup_password"
        android:layout_marginTop="10dp"
        android:text="Domain:"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <EditText
        android:id="@+id/setup_domain"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvkoxai3"
        android:hint="xxx.xxx.xxx.xxx"
        android:textSize="25sp"
        android:singleLine="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/tvkoxai2"
        android:layout_below="@+id/setup_domain"
        android:layout_marginTop="15dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/btnOkay"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCancel"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_toRightOf="@+id/btnCancel"
        android:text="Okay" />
    
</RelativeLayout> 